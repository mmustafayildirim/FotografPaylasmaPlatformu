<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.SingUp"
    android:background="#03A9F4"
    android:orientation="vertical"
    android:padding="20dp">
    <ImageView
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/amblem"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="35dp"
        android:layout_marginTop="35dp">
        <EditText
            android:id="@+id/Fullnamee"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:ems="10"
            android:hint="Adınızı ve Soyadınızı Giriniz"
            android:fontFamily="sans-serif-condensed-medium"/>


        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:hint="E-postanızı Giriniz"
            android:ems="10"
            android:fontFamily="sans-serif-condensed-medium"/>


        <EditText
            android:id="@+id/Password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="Şifrenizi Giriniz"
            android:inputType="textPassword"
            android:textSize="20sp"
            android:fontFamily="sans-serif-condensed-medium"/>
    </LinearLayout>

    <Button
        android:id="@+id/Kaydol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000"
        android:text="Kayıt Ol"

        android:textColor="#fff" />
    <Button
        android:id="@+id/turnlogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zaten Bir Hesabim Var,Hemen Giriş Yap"
        android:layout_margin="20dp"
        android:background="#00000000"
        android:fontFamily="sans-serif-condensed-medium"
        android:onClick="turnLogin"
        />



</LinearLayout>
