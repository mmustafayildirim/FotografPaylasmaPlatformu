<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ForgetPassword"
    android:background="#03A9F4"
    android:orientation="vertical"
    android:padding="20dp">
    <ImageView
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/amblem"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="35dp"
        android:layout_marginTop="35dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sifremiss"
            android:textSize="24sp"
            android:text="Şifremi Unuttum"
            android:textAlignment="center"
            android:layout_margin="20dp"
            android:fontFamily="sans-serif-condensed-medium"
            />
       <EditText
            android:id="@+id/emaileGonder"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:ems="10"
            android:hint="Lütfen E-postanızı Giriniz"
            android:fontFamily="sans-serif-condensed-medium"
           android:layout_marginBottom="15dp"/>
        <Button
            android:id="@+id/sifirlamayaGonder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000"
            android:text="Gönder"
            android:textColor="#fff" />
        <Button
            android:id="@+id/turnlogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Şifremi Hatırlıyorum,Hemen Giriş Yap"
            android:layout_margin="20dp"
            android:background="#00000000"
            android:onClick="LogineDon"
            android:fontFamily="sans-serif-condensed-medium"
            />
    </LinearLayout>
</LinearLayout>